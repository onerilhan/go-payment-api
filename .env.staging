# Staging Environment Variables
APP_ENV=staging
PORT=8080

# Database Configuration (Staging DB)
DB_HOST=staging-db
DB_PORT=5432
DB_USER=payment_staging_user
DB_PASSWORD=staging_secure_password_2024
DB_NAME=paymentdb_staging

# Redis Configuration
REDIS_HOST=staging-redis
REDIS_PORT=6379
REDIS_PASSWORD=staging_redis_pass_2024

# JWT Configuration (Different from dev/prod)
JWT_SECRET=staging_jwt_secret_key_32_chars_minimum_length

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting (Less strict than prod)
RATE_LIMIT_REQUESTS_PER_MINUTE=120
RATE_LIMIT_BURST=20

# Cache Configuration
CACHE_TTL_BALANCE=300       # 5 minutes
CACHE_TTL_USER_PROFILE=1800 # 30 minutes
CACHE_TTL_TRANSACTIONS=900  # 15 minutes

# Monitoring & Observability
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30s

# External Services (Staging endpoints)
# SENTRY_DSN=https://your-staging-sentry-dsn@sentry.io/project
# NEW_RELIC_APP_NAME=payment-api-staging